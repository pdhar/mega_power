<h1>Listing equipment</h1>

<table class="table table-condensed">
  <tr>
    <th>Price</th>
    <th>Depreciation</th>
    <th>Model no</th>
    <th>Eng model no</th>
    <th>Serial no</th>
    <th>Eng serial no</th>
    <th>Alternator sr no</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @equipment.each do |equipment| %>
  <tr class="<%= cycle('oddrow', 'evenrow') %>">
    <td><%= equipment.price %></td>
    <td><%= equipment.depreciation %></td>
    <td><%= equipment.model_no %></td>
    <td><%= equipment.eng_model_no %></td>
    <td><%= equipment.serial_no %></td>
    <td><%= equipment.eng_serial_no %></td>
    <td><%= equipment.alternator_sr_no %></td>
    <td><%= link_to 'Show', equipment %></td>
    <td><%= link_to 'Edit', edit_equipment_path(equipment) %></td>
    <td><%= link_to 'Destroy', equipment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

