<%= simple_form_for(@equipment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :price %>
    <%= f.input :depreciation %>
    <%= f.input :model_no %>
    <%= f.input :eng_model_no %>
    <%= f.input :serial_no %>
    <%= f.input :eng_serial_no %>
    <%= f.input :alternator_sr_no %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
