<%= simple_form_for(@breakdown, :validate => true) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :breakdown_name %>
    <%= f.input :breakdown_description ,:label => "Description", :input_html => { :cols => 50, :rows => 3 }%>
    <%= f.input :breakdown_no %>
    <%= f.input :breakdown_cost %>
    <%= f.input :total_parts_cost %>
    <%= f.input :total_labour_cost %>
    
    <%= f.association :parts, :label_method => :part_name %>
    
    <%= f.association :labours, :label_method => :labour_name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn-primary" %>
  </div>
<% end %>

<script>
$(".chosen").chosen();
</script>