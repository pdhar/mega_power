<div id="role-options-<%= service.id %>" class="modal hide fade" style="display: none;">

<%= simple_form_for service, :url => update_inventory_path(service), :html => {:method => :put, :class => 'form-horizontal' } do |f| %>
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">
			&times;
		</button>
		<h3>Update Parts Qty for <%= service.service_name %></h3>
	</div>
	<div class="modal-body">
		<p class="text-center">
			
			HELLO
			
		</p>
		<%= f.simple_fields_for :servicepartsments do |builder| %> 
		
		
		<%= builder.object.part_name(builder.object.part_id) %>
		
		    <%= builder.label :service_id, "Date Added" %>
  			<%= builder.text_field :service_id %>
  		<% end %>
		
		<br />
		
	</div>
	<div class="modal-footer">
		<button class="btn btn-danger" data-dismiss="modal" aria-hidden="true">
			Close
		</button>
		<%= f.submit "Save changes", :class => "btn btn-primary" %>
	</div>
	<% end %>
	
</div>
