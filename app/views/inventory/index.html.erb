<h1>Listing Inventory</h1>

<table class="table table-condensed">
  <tr>
    <th>Part name</th>
    <th>Part no</th>
    <th>Part Cost</th>
    <th>Part description</th>
    <th>Current Stock</th>
    <th>Used Stock</th>
    <th></th>
    <th></th>
  </tr>

<% @parts.each do |part| %>
  <tr class="<%= cycle('oddrow', 'evenrow') %>">
    <td><%= part.part_name %></td>
    <td><%= part.part_no %></td>
    <td><%= part.part_cost %></td>
    <td><%= part.part_description %></td>
    <td><%= part.current_stock %></td>
    <td><%= part.used_stock %></td>
    <td>
      <a data-toggle="modal" href="#role-options-<%= part.id %>" class="btn btn-mini" type="button">Edit Stock</a>
      <%= render 'stock' , part: part %>
    </td>
    <td>
      <%= button_to "History", part_history_path(part),  :class => "btn btn-mini" %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Part', new_part_path %>
