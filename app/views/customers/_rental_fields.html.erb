<div style="background-color: black; color: white; margin-top: 30px;" class="nested-fields">
	<div class="childHeading">
		(Rental <span class="counter"></span> ) <%= f.input_field :name , :as => :display %>
	</div>
	
	<span class="close-btn">
		<a class="slideParent" href='javascript:;'>&mdash;</a>
		<%= link_to_remove_association "X", f %>
	</span>
	
	<div style='display: none; border: 1px solid;background-color: white; color: black; padding-top: 35px;'>
		
		<%= f.input :name, :label => 'Site Name' %>
		<%= f.input :siteno , :label => 'Site No.'%>
		<%= f.input :description, :as => :text, :input_html => { :cols => 50, :rows => 3 } %>
		<%= f.input :address, :label => 'Location', :as => :text, :input_html => { :cols => 50, :rows => 3 } %>
		
		<div id="componentmonths">
			<%= f.simple_fields_for :rentalitems do |builder|%>
			
				<%= render 'rentalitem_fields' , f: builder %>
			
			<% end %>
			
			<div class="links" >
				<%= link_to_add_association "Add Item", f, :rentalitems , :class => "btn btn-mini btn-block btn-info" %>
			</div>
		</div>
		
	</div>
	
</div>

<script>
var index = 0;
$('.counter').each(function(i, obj) {
    $(this).text(++index);
});

$(".chosen").chosen();
</script>